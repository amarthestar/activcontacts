<%= render :partial => "layouts/first" %>
<div align=center style="margin-top:90px">
<%= image_tag("/images/u22.jpg")%>
<h1>Messages</h1>
<script src="/javascripts/livevalidation.js"></script>
<h1>Send message to [<%= @receiver.first_name %>]</h1>
<h2>Your Name: <%= current_user.first_name %></h2></div>
<div align=center style="margin-top:10px">
<table cellspacing=10>
       <%=form_for :message, :url=>{:action=>"sendmessage", :controller=>"messages"} do |f|%>
               <tr>
                       <td><%=f.hidden_field :sender, :value=>@sender %></td>
                       <td><%=f.hidden_field :receiver, :value=>@receiver.id %></td>
	       </tr>
             
               <tr>
		       <td><%=f.label :Present_Email,"Present_Email"%></td><br>                       
                       <td><%=@receiver.email %></td><br>
		</tr>
               <tr><div style="position:absolute; left:320px; top:380px; width:37px; height:22px; ; ; text-align: left ; font-family:Arial; text-align:left; word-wrap:break-word;" id="u59">
<div id="u59_rtf"><span style=" font-family:'Arial'; color:#FF0000; font-size:19px;">*</span></div></div>
		       <td><%=f.label :subject,"Subject"%></td>                        
                       <td><%=f.text_field :subject %></td>
		</tr>
               <tr><div style="position:absolute; left:320px; top:490px; width:37px; height:22px; ; ; text-align: left ; font-family:Arial; text-align:left; word-wrap:break-word;" id="u59">
<div id="u59_rtf"><span style=" font-family:'Arial'; color:#FF0000; font-size:19px;">*</span></div></div>
                       <td><%=f.label :message,"Message"%></td>                        
                       <td><%=f.text_area :message, :size => '50x10'%></td>
               </tr>
               <tr>
                       <td></td><td></td><td></td> 
                       <td colspan=3><%=f.submit 'Send Message'%></td>
               </tr>
                      <%= f.hidden_field :user_id, :value => current_user.id %>   
       <%end%>
 </table>
</div>

<script>
var f1 = new LiveValidation('message_subject');
f1.add( Validate.Presence ); 
var f2 = new LiveValidation('message_message');
f2.add( Validate.Presence ); 
</script>

 


