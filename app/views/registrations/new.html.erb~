<script>


var f1 = new LiveValidation('user_first_name');
f1.add( Validate.Presence );

var f2 = new LiveValidation('user_last_name');
f2.add( Validate.Presence ); 

var f3 = new LiveValidation('user_phone_number');
f3.add( Validate.Presence ); 
f3.add( Validate.Numericality, { onlyInteger: true } );
f3.add( Validate.Length, { minimum: 10, maximum: 15 } );


</script>
